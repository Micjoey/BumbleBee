<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function () {    
        const switchGraphTypeButton = document.getElementById("graph-switch-button")
        const advancedTable = document.getElementById("enhanced-view")
        const regularTable = document.getElementById("regular-view")

        switchGraphTypeButton.addEventListener("click", () => {
            advancedTable.classList.toggle("show-table")
            regularTable.classList.toggle("show-table")
            switchGraphTypeButton.innerHTML === "Regular View" ? 
                switchGraphTypeButton.innerHTML = "Enhanced View" :
                switchGraphTypeButton.innerHTML = "Regular View"
        }) 
    });
</script>