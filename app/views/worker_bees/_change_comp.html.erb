<form  method="POST" action="<%=worker_bee_url(worker_bee)%>">
    <input type="hidden" name="_method" value="PATCH">

    <label for="worker-bee-comb">Combs the bee has collected for: </label>

    <select name="worker_bee[comb_id]" id="worker-bee-comb">
    <option disabled selected>-- select a comb --</option>
        <% comb_array.each do |comb|%>
            <%if worker_bee.all_combs_part_of.include?(comb)%>
                <option
                <%= worker_bee.comb_id == comb ? "selected" : "" %>
                value="<%= comb %>"
                style="color: red"
                class="included-comb">
                Has Collected For - <%= comb %>
                </option>
            <% else%>
                <option
                    <%= worker_bee.comb_id == comb ? "selected" : "" %>
                    value="<%= comb %>">
                    <%= comb %>
                </option>
            <%end%>
        <% end %>
    </select>
    <input type="submit" value="submit">
</form>