 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="app/views/worker_bees/format_time.js"></script>
    
    <%= stylesheet_link_tag 'worker_bee.css' %>


    <title>Document</title>

</head>
<body>
<div>
    <div>
        <a href="http://localhost:3000/worker_bees">Go Back to all Bees</a>
    </div>
    <div>
        <p>Showing a bee named - <%= @worker_bee.bee_name%></p>
        <p>Current Comb - <%= @worker_bee.comb_id%></p>
        <div class="change-bee-comb">
            <%= render "change_comp", worker_bee: @worker_bee%>
        </div>
        <p>Total Collection - <%= @worker_bee.individualBeeTotalCollection%></p>
    </div>
    <div>

    </div>
    <div id="worker-bee-pollen" style="display: none"><%= @worker_bee.pollenCollected%></div>
    <div id="worker-bee-nectar" style="display: none"><%= @worker_bee.nectarUsed%></div>

    <div id="container" style="width:100%; height:400px;">
        <%= render "graph"%>
    </div>

    <div>
        <table>
            <tr>
                <th>ID</th>
                <th>ID-CombId</th>
                <th>Date</th>
                <th>PollenGlobs</th>
                <th>Nectar</th>
                <th>Advisement</th>
                <th>% Accepted</th>
            </tr>
            <% @worker_bee.allGlobs.each do |data, idx| %>
                <tr>
                    <td class="data-columns"><%=data.bee_id%></td> 
                    <td class="data-columns"><%=data.bee_id%>-C<%=data.comb_id%></td> 
                    <td class="data-columns"><%=data.created_at%></td> 
                    <td class="data-columns"><%=data.pollen_glob_collected%> p/g</td> 
                    <td class="data-columns"><%=data.nectar_consumption%> Units</td> 
                    <td class="data-columns"><%=@worker_bee.nectar%> Units</td>
                </tr>
            <%end%>
            <tr>
               
            </tr>
        </table>
    
    </div>
    
    
    
    </div>
</>

</body>
</html>